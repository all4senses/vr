        <th class="page">' . $sort_links['click_page'] . '</th>
        <th>' . $sort_links['ip'] . '</th>
        <th>' . $sort_links['uname'] . '</th>'
       //.'<th class="data">Data</th>'
       .'<th>Operations</th>
      </tr></thead><tbody>',
  );
  
  
    

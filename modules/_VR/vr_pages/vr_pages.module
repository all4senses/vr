    $order_marker = '';
    if ($sort_option == @$_GET['sort']) {
      if (!@$_GET['order'] || $_GET['order'] == 'DESC') {
        $current_order = 'ASC';
        $order = 'ASC';
        $order_marker = '&darr;';
      }
      else {
        $current_order = 'DESC';
        $order = 'DESC';
        $order_marker = '&uarr;';
      }

  $query = '';
  foreach ($_GET as $key => $value) {
    if ($key != 'q' && $key != 'sort' && $key != 'order') {
      $query .= ($query ? '&' : '?') . $key . '=' . $value;
    }
  }

              
  $sort_options = array('timestamp' => 'Click date', 'type' => 'Object type', 'object_name' => 'Object name', 
